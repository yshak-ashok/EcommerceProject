            <!-- Cancel Order -->
            <script>
                // Open the cancellation modal when clicking "CANCEL ORDER"
                document.getElementById("cancelOrder").addEventListener("click", (event) => {
                    event.preventDefault();
                    var modal = document.getElementById("cancelOrderModal");
                    modal.style.display = "block";
            
                    // On confirm click, cancel the order
                    document.getElementById("confirmCancelOrder").addEventListener("click", async () => {
                        modal.style.display = "none";
                        cancelOrder();
                    });
                });
            
                function cancelOrder() {
                    // Fetch the order cancellation only after confirmation
                    const orderId = document.getElementById("cancelOrder").getAttribute("data-orderId");
                    fetch(`/user/cancelOrder/?orderId=${orderId}`)
                        .then(response => response.json())
                        .then(result => {
                            if (result.status === "success") {
                                showModalMessage(result.message);
                                setTimeout(() => {
                                    location.href = "/user/orderList";
                                }, 1500);
                            } else {
                                showModalMessage(result.message);
                            }
                        })
                        .catch(error => {
                            showModalMessage("An error occurred while canceling the order.");
                        });
                }
            
                function showModalMessage(message) {
                    // Function to display the message in a modal
                    const modal = document.createElement("div");
                    modal.classList.add("order-modal"); // Apply appropriate styling through CSS
                    const modalContent = document.createElement("div");
                    modalContent.classList.add("order-modal-content");
                    modalContent.innerHTML = ` ${message}`;
            
                    modal.appendChild(modalContent);
                    document.body.appendChild(modal);
                    modal.style.textAlign = "center";
                    setTimeout(() => {
                        document.body.removeChild(modal);
                    },1500); // 1.5 seconds in this example
                }
            
                // Code for handling the modal close functionality
                var closeButtons = document.querySelectorAll(".close");
                closeButtons.forEach(function (button) {
                    button.addEventListener("click", function () {
                        var modal = button.parentElement.parentElement;
                        modal.style.display = "none";
                    });
                });
            </script>








            <!-- Return Items -->
            <script>
                document.getElementById("returnItem").addEventListener("click", async (event) => {
                    event.preventDefault();

                    const orderId = event.target.getAttribute("data-orderId");

                    // Get the selected values from the dropdowns
                    const selectedProduct = document.getElementById("returnProduct").value;
                    const selectedReason = document.getElementById("returnReason").value;

                    // Create a data object to send as JSON in the request body
                    const returnData = {
                        orderId: orderId,
                        selectedProduct: selectedProduct,
                        selectedReason: selectedReason,
                    };

                    // Send the data as JSON in the request body
                    const response = await fetch(`/user/returnItem`, {
                        method: "POST", // You should use the appropriate HTTP method (POST in this case)
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(returnData),
                    })
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.message) {
                                setTimeout(() => {
                                    showModalMessage(data.message);
                                }, 100);

                                setTimeout(() => {
                                    location.href = "/user/orderList";
                                }, 2500);
                            }
                            else if(data.errorMessage){
                                setTimeout(() => {
                                    showModalMessage(data.errorMessage);
                                }, 100);
                            }
                        })
                        .catch((error) => {
                            console.error("Error:", error);
                        });
                });

                function showModalMessage(message) {
                    // Create a modal element with the message and the specified icon
                    const modal = document.createElement("div");
                    modal.classList.add("return-modal"); // Apply appropriate styling through CSS
                    const modalContent = document.createElement("div");
                    modalContent.classList.add("return-modal-content");
                    modalContent.innerHTML = ` ${message}`;
                    
                    modal.appendChild(modalContent);
                    document.body.appendChild(modal);
                    // Center the icon and message vertically and horizontally
                    modal.style.textAlign = "center";
