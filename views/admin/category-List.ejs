    <main class="main-wrap">
      <header class="main-header navbar">
        <div class="col-nav">
            <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i class="material-icons md-apps"></i> </button>
        </div>
    </header>
        <section class="content-main">
            <div class="row">
                <div class="col-12">
                    <div class="content-header">
                        <h2 class="content-title">CATEGORY LIST</h2> 
                        <div>
                          <a href="/admin/loadAddCategory" class="btn btn-primary btn-sm rounded">Add New Category</a>
                      </div>
                    </div>
                  
                </div>
                <div class="table-container table-responsive">
                  <table class="table">
                    <thead class="table-head">
                      <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Edit</th>
                  
                      </tr>
                    </thead>
                    <tbody>
                      <% if (viewcategory.length > 0) { %>
                        <% for (let i = 0; i < viewcategory.length; i++) { %>
                          <tr>
                            <td class="align-middle"><img class="rounded" style="width: 50px; height: 60px;" src="admin-assets/imgs/products/<%=  viewcategory[i].image %>" alt="image"></td>
                            <td class="align-middle"><%= viewcategory[i].name %></td>
                            <td class="align-middle"><%= viewcategory[i].description %></td>
                            <td class="align-middle">
                            <% if(viewcategory[i].status==false){ %>
                              <div class="col-12 mt-3">
                                <button type="button" class=" category-btn btn-list" data-category-id="<%= viewcategory[i]._id %>">List</button>
                    
                             </div>
                              <!-- listcategory Modal -->
                              <div id="listModal_<%= viewcategory[i]._id %>" class="modal">
                                <div class="modal-content">
                                    <span class="close">&times;</span>
                                    <p>Are you sure you want to list this category</p>
                                    <a href="/admin/listCategory?id=<%= viewcategory[i]._id %>">
                                      <button type="button" class="btn btn-dark">Confirm</button>
                                   </a>
                                </div>
                              </div>
                            <% }else{ %>
                              <div class="col-12 mt-3">
                                <button type="button" class=" category-btn btn-unlist" data-category-id="<%= viewcategory[i]._id %>">Unlist</button>
                  
                            </div>
                  
                            <!-- unlist Modal -->
                            <div id="unlistModal_<%= viewcategory[i]._id %>" class="modal">
                              <div class="modal-content">
                                  <span class="close">&times;</span>
                                  <p>Are you sure you want to unlist this category</p>
                                  <a href="/admin/unListCategory?id=<%= viewcategory[i]._id %>">
                                    <button type="button" class="btn btn-dark">Confirm</button>
                                  </a>
                              </div>
                            </div>
                
                              <%}%>
                            </td>

                            <td class="align-middle">
                              <div class="col-12 mt-3">
                                <a href="/admin/editCategory?id=<%= viewcategory[i]._id %>">
                                <button type="button" class=" edit-btn " data-category-id="<%= viewcategory[i]._id %>">Edit</button>
                              </a>
                            </div>
                          </td>


                          </tr>
                        <% } %>
                      <% } else { %>
                        <tr>
                          <td colspan="5">
                            <h2 class="not-found text-center">NO CATEGORY FOUND</h2>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>

                  <!-- Pagination controls -->
             <div class="pagination-container">
              <div class="page-count">
                Page <%= currentPage %> of <%= totalPages %>
              </div>
            
              <div class="pagination">
                <% if (currentPage > 1) { %>
                  <a href="?page=<%= currentPage - 1 %>" class="prev">Previous</a>
                <% } %>
                
                <% if (currentPage < totalPages) { %>
                  <a href="?page=<%= currentPage + 1 %>" class="next">Next</a>
                <% } else { %>
                  
                <% } %>
              </div>
          </div>
                </div>
            </div>
             
        </section> 

  <!-- --------------footer start ----------->

        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
