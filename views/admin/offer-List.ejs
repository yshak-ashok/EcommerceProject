  </aside>

    <main class="main-wrap">
      <header class="main-header navbar">
        <div class="col-nav">
            <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i class="material-icons md-apps"></i> </button>
        </div>
    </header>
        <section class="content-main">
            <div class="row">
                <div class="col-8">
                    <div class="content-header">
                        <h2 class="content-title">OFFER LIST</h2> 
                        <div>
                          <a href="/admin/offer" class="btn btn-primary btn-sm rounded">Add New Offer</a>
                      </div>
                    </div>
                  
                </div>
                <div class="col-8">
                <div class="table-container table-responsive">
                  <table class="table">
                    <thead class="table-head">
                      <tr>
                        <th>Offer Category Name</th>
                        <th>Offer in Percentage</th>
                      </tr>
                    </thead>
                    <tbody> 
                      <% if(offerList.length >0) {%>
                        <% for(let i=0; i< offerList.length; i++){ %> 
                          <tr>
                            <td class="align-middle"><%-offerList[i].category %></td>
                            <td class="align-middle"><%-offerList[i].offerPercentage %>%</td>
                          </tr>  
                          <%} %>
                          <%}else {%>
                            <tr>
                              <td colspan="2">
                                <h2 class="not-found text-center">NO DATA FOUND</h2>
                              </td>
                              
                            </tr>
                          <%}%>
                          
                    </tbody>
                  </table>
                </div>
                </div>
            </div>
             
        </section> 

