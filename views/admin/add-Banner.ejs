    <style>
        .img-div {
        position: relative;
        width: 15%;
        float:left;
        margin-right:5px;
        margin-left:5px;
        margin-bottom:10px;
        margin-top:10px;
    }
    
    .image {
        opacity: 1;
        display: block;
        width: 100%;
        max-width: auto;
        transition: .5s ease;
        backface-visibility: hidden;
    }
    
    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }
    
    .img-div:hover .image {
        opacity: 0.3;
    }
    
    .img-div:hover .middle {
        opacity: 1;
    }
    .row-price {
    overflow-x: auto; /* This will enable horizontal scrollbar if the content overflows */
}
      </style>
